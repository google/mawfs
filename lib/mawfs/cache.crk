        uint64 base, continueToNext;
        __populateChildren(false);
        for (child :in __children) {
            childSize := child.getSize();
            if (pos < base + childSize) {
                end := child.getNode().__writeChunkSuffix(out, pos - base);
                if (end <= childSize)
